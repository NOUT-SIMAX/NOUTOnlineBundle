{% extends "NOUTOnlineBundle::layout.html.twig" %}

{% block stylesheets %}
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

	<style type="text/css">
		body { padding-top: 70px; }
	</style>
{% endblock%}

{% block containt %}
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<ul class="nav navbar-nav">
				<li><a href="{{ path('index') }}">Retour index</a></li>
			</ul>
		</div>
	</nav>

	{{ containt | raw }}

	{% if html_raw is defined %}
	<h1>HTML_RAW</h1>
		<h2>htmlspecialchars</h2>
		{{ html_raw | nl2br}}
		<h2>raw</h2>
		{#
		<div style="display:none" id="content_iframe">
			{{ html_raw }}
		</div>
		#}
		<iframe id="my_iframe" width="100%" height="500px" srcdoc="{{ html_raw }}" seamless>
		</iframe>
	{% endif %}
{% endblock %}

